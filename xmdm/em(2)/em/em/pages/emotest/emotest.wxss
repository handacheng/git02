.container {
  height: 100vh;
  background-color: rgba(250, 251, 254, 100);
}

.content {
  width: 100%;
  height: calc(100vh - 300rpx);
  display: flex;
  flex-direction: column;
  /* align-items: center;
  justify-content: center; */
}

.service-msg {
  margin: 0 30rpx;
  margin-bottom: 40rpx;
}

.service-msg:first-child {
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

.service-msg .msg-time {
  text-align: center;
  font-size: 20rpx;
  margin: 10rpx;
}

.service-msg .msg-content {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.service-msg .msg-content .head-img {
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx 0 0;
}

.service-msg .msg-content .msg-text {
  max-width: 55%;
  height: auto;
  line-height: 35rpx;
  padding: 10rpx;
  border-radius: 0px 5px 5px 15px;
  background-color: rgba(255, 255, 255, 100);
  color: rgba(51, 51, 51, 100);
  font-size: 24rpx;
  text-align: left;
  font-family: Arial;
  border: 1px solid rgba(229, 229, 234, 100);
}

.custom-msg {
  margin: 0 30rpx;
  margin-bottom: 40rpx;
}

.custom-msg .msg-time {
  text-align: center;
  font-size: 20rpx;
  margin: 10rpx;
}

.custom-msg .msg-content {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
}

.custom-msg .msg-content .head-img {
  width: 80rpx;
  height: 80rpx;
  margin: 0 0 0 20rpx;
  border-radius: 200rpx;
}

.custom-msg .msg-content .msg-text {
  max-width: 55%;
  height: auto;
  line-height: 35rpx;
  padding: 10rpx 40rpx;
  border-radius: 5px 0px 15px 5px;
  background-color: rgba(85, 77, 132, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 24rpx;
  text-align: left;
  font-family: Arial;
  border: 1px solid rgba(229, 229, 234, 100);
}

.answer-list {
  width: 50%;
  padding: 20rpx 20rpx 0 20rpx;
  border-radius: 10px 10px 10px 10px;
  text-align: center;
  border: 1px solid rgba(187, 187, 187, 100);
  margin: 0 0 40rpx 110rpx;
}

.answer-list .answer-text {
  margin-bottom: 20rpx;
  border-radius: 4px;
  background-color: rgba(204, 202, 202, 100);
  color: rgba(16, 16, 16, 100);
  font-size: 24rpx;
  text-align: center;
  font-family: Microsoft Yahei;
  border: 1px solid rgba(187, 187, 187, 100);
  padding: 10rpx 0;
}

.test-result {
  /* width: 620rpx; */
  margin: 40rpx 80rpx;
  line-height: 35rpx;
  border-radius: 10px 10px 10px 10px;
  background-color: rgba(255, 255, 255, 100);
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(163, 166, 165, 100);
}

.test-result .result-header {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 40rpx 20rpx 20rpx;
}

.result-header .title {
  color: rgba(16, 16, 16, 100);
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.result-header .redo-btn {
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 4px 4px 4px 4px;
  background-color: rgba(203, 217, 214, 100);
  color: rgba(16, 16, 16, 100);
  font-size: 24rpx;
  text-align: center;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.4);
  font-family: Microsoft Yahei;
  border: 1px solid rgba(171, 181, 176, 100);
}

.test-result .result-content {
  margin: 10rpx 20rpx;
}

.result-content .summary {
  display: block;
  font-size: 28rpx;
}

.result-content .tip-header {
  display: block;
  margin: 30rpx 0 30rpx 0;
  color: rgba(16, 16, 16, 100);
  font-size: 30rpx;
  font-weight: 600;
}

.result-content .tip-content {
  color: rgba(16, 16, 16, 100);
  font-size: 25rpx;
}

.test-result .more-btn {
  display: flex;
  justify-content: flex-end;
  margin: 40rpx;
}

.more-btn .btn {
  width: 300rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 4px 4px 4px 4px;
  background-color: rgba(203, 217, 214, 100);
  color: rgba(16, 16, 16, 100);
  font-size: 24rpx;
  text-align: center;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.4);
  font-family: Microsoft Yahei;
  border: 1px solid rgba(171, 181, 176, 100);
}

.send-msg {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background-color: #FFFFFF;
}

.send-msg .send-input {
  width: 82%;
  height: 30rpx;
  margin: 30rpx 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 500px;
  background-color: rgba(242, 242, 247, 100);
  color: rgba(136, 129, 129, 100);
  font-size: 14px;
  text-align: left;
  font-family: Arial;
}

.send-msg .send-btn {
  width: 18%;
  height: 50rpx;
  font-size: 25rpx;
  margin: 30rpx 20rpx 30rpx 0;
  padding: 10rpx 20rpx;
  line-height: 30rpx;
  border-radius: 500px;
  background-color: #00b2f7;
  color: #FFFFFF;
}

.send-msg .send-btn[disabled] {
  background-color: #f7f7f7;
  color: rgba(0, 0, 0, .3);
  border: 1px solid #b7b7b7;
}